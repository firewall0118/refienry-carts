<%= form_for [refinery, :carts_admin, @cart] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @cart,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :user -%>
    <%= f.text_field :user, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :discount_code -%>
    <%= f.text_field :discount_code -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.carts.admin.carts.cart'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @cart.discount_code) -%>
<% end -%>
